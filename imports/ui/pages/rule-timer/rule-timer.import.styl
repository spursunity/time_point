.ruleTimer
	container(basis-inner-height(), 100vw)
	background-image-f('./images/rule-back.jpg')
	background-size: cover
	flex-f(,,stretch)

	.listContainer
		flex-f(column, flex-start, stretch)
		container(basis-inner-height(), 25%)
		colors-f(light-blue, black)
		border-f(white)
		overflow: auto
		font-size: fsize-middle
		margin: 0
		padding: 1rem
		padding-left: 2rem

		.taskItem
			display: block
			position: relative
			padding-top: .5rem
			padding-right: 2rem
			list-style-type: none
			cursor: pointer
			word-wrap: break-word
			border-bottom: .3rem solid #fff

			.deleteTask
				display: none
				position: absolute
				right: 0
				bottom: 0

			&:hover
				colors-f(dark-blue, white)

				.deleteTask
					display: block

	.managingBlock
		flex-f(column, flex-start)
		width: 80%
		padding-top: 2rem

		.newTask
			flex-f(column, flex-start)
			padding-bottom: 1.2rem

			.textField
				display: block
				padding: 1.5rem
				text-align: center
				colors-f(light-blue-transparency)

				.newTaskName
					width: 100%
					font-size: fsize-middle
					outline: none
					padding: .5rem
					border-radius: .5rem
					border-f(white)
					colors-f(light-blue-transparency, dark-blue)

					&:focus
						border-f(dark-blue)

			.taskNameError
				container(1rem, 100%)
				margin: 0
				padding: 0
				font-size: fsize-small
				color: red

		.timer
			width: 80%
			padding: 1.2rem
			colors-f(light-blue-transparency)

			.timerTitle
				text-align: center

				.currentTaskName
					font-style: italic
					font-weight: normal

			.timerButtons
				flex-f(column, flex-start)
